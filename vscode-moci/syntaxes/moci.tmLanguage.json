{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "MOCI",
  "scopeName": "source.moci",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#identifiers" },
    { "include": "#operators" },
    { "include": "#braces" }
  ],
  "repository": {
    "comments":  {
      "patterns": [{
        "name": "comment.line.tilde.moci",
        "match": "~.*$"
      }]
    },
    "keywords": {
      "patterns": [
        { "name": "keyword.control.moci",
          "match": "\\b(fuc|moc|bg|spaw|ops|jump|continue)\\b" },
        { "name": "entity.name.function.moci",
          "match": "\\b(screen\\.\\d+|poin)\\b" },
        { "name": "support.constant.moci",
          "match": "\\b(animation\\.[a-zA-Z_][a-zA-Z0-9_]*)\\b" }
      ]
    },
    "strings": {
      "patterns": [{
        "name": "string.quoted.double.moci",
        "match": "\"[^\"]*\""
      }]
    },
    "numbers": {
      "patterns": [{
        "name": "constant.numeric.moci",
        "match": "\\b(x|y)\\.\\d+\\b|\\b\\d+\\b"
      }]
    },
    "identifiers": {
      "patterns": [
        { "name": "variable.other.moci",
          "match": "\\B#\\s*[a-zA-Z_][a-zA-Z0-9_]*\\b" },
        { "name": "variable.parameter.moci",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b(?=\\s*[+=\\[]|$)" }
      ]
    },
    "operators": {
      "patterns": [{
        "name": "keyword.operator.moci",
        "match": "=>|\\+|\\-|\\*|\\/|\\="
      }]
    },
    "braces": {
      "patterns": [{
        "name": "meta.brace.moci",
        "match": "\\{|\\}|\\[|\\]"
      }]
    }
  }
}